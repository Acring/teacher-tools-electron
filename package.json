{
  "name": "teacher-tools",
  "version": "1.7.0",
  "description": "教师工具箱",
  "main": "./out/main/index.js",
  "author": "acring",
  "homepage": "https://github.com/acring/teacher-tools-electron",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && cross-env electron-builder --win --x64",
    "build:mac": "npm run build && cross-env electron-builder --mac",
    "build:linux": "npm run build && cross-env electron-builder --linux",
    "release": "release-it"
  },
  "dependencies": {
    "@acring4ever/docx": "^9.5.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/electron-store": "^1.3.1",
    "@types/react-router-dom": "^5.3.3",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "docx": "^9.5.0",
    "electron-log": "^5.4.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.514.0",
    "react-router-dom": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.4.49",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "release-it": "^19.0.3",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  },
  "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f"
}
